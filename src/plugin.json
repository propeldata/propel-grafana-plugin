{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Propel",
  "id": "propeldata-graphql-datasource",
  "metrics": true,
  "info": {
    "description": "Grafana data source plugin to connect to Propel",
    "author": {
      "name": "Propel",
      "url": "https://www.propeldata.com/"
    },
    "keywords": [
      "propel",
      "data",
      "analytics",
      "metric",
      "datasource",
      "datapool",
      "propeldata"
    ],
    "logos": {
      "small": "img/logo-small.svg",
      "large": "img/logo-big.svg"
    },
    "links": [
      {
        "name": "Github",
        "url": "https://github.com/propeldata/propel-grafana-plugin"
      },
      {
        "name": "License",
        "url": "https://github.com/propeldata/propel-grafana-plugin/blob/main/LICENSE"
      }
    ],
    "screenshots": [
      {
        "name": "Dashboard",
        "path": "img/dashboard.png"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=9.1.2",
    "plugins": []
  },
  "routes": [
    {
      "path": "us-east-2",
      "url": "https://api.us-east-2.propeldata.com/graphql",
      "tokenAuth": {
        "url": "https://auth.us-east-2.propeldata.com/oauth2/token",
        "params": {
          "grant_type": "client_credentials",
          "client_id": "{{ .JsonData.clientId }}",
          "client_secret": "{{ .SecureJsonData.clientSecret }}"
        }
      }
    }
  ]
}
